/*CorePad*/

#appTitle{
    background-color: transparent;
    color: @color07;
    border: none;}

QWidget [accessibleName="shortcut"]{
    background-color: #2F323A;
    color: @color07;
    border: none;}

QFrame [accessibleName="searchBox"]{
    background-color: @color03;
    color: @color07;
    border: none;}


QLineEdit{
    background-color: transparent;
    color: @color07;
    height: 22px;
    border: 1px solid @color05;
    padding: 5px 5px 5px 10px;}


QSpinBox {
    background-color: transparent;
    color: @color07;
    border: 1px solid @color05;
    padding: 5px 5px 5px 10px;}
QSpinBox::up-button {
    subcontrol-origin: border;
    subcontrol-position: top right;
    width: 16px;
    border-image: url(:/icons/up_w.svg) 1;
    border-width: 1px;}
QSpinBox::down-button {
    subcontrol-origin: border;
    subcontrol-position: bottom right;
    width: 16px;
    border-image: url(:/icons/down_w.svg) 1;
    border-width: 1px;
    border-top-width: 0;}


QToolButton{
    background-color: transparent;
    color: @color07;
    border: 1px solid @color05;}
QToolButton:pressed{
    background-color: @color04;}
QToolButton:hover {
    background-color: @color04;}


QPushButton{
    background-color: transparent;
    color: @color07;
    Text-align:left;
    border: none;
    padding: 5px 5px 5px 5px;}
QPushButton:pressed{
    background-color: @color04;}
QPushButton:hover {
    background-color: @color04;}


QComboBox {
    border: 1px solid @color05;
    padding: 2px 2px 2px 10px;}
QComboBox QAbstractItemView {
    background-color: #546070;
    color: @color07;
    selection-background-color: #F1A873;}
QComboBox::drop-down {
    background-color: #3C3C43;}


QTabBar::tab:!selected{
    background-color: @color01;
    color:#B4B4B4;}
QTabBar::tab:selected{
    background-color: @color01;
    font-weight: bold;
    color:#0f5d90;
    border-bottom: 2px solid #0f5d90;}
QTabBar::close-button {
    image: url(:/icons/close_w.svg);
    subcontrol-position: right;}
QTabBar::tab{
    text-align:left;
    background-color: @color01;
    border-style: 1px #B4B4B4;
    height:25px;
    color: #136ba2;
    padding: 0px 5px 0px 5px;}
QTabBar{
    background-color: @color01;
    height: 25px;}


QScrollBar:vertical {
    background-color: transparent;
    max-width: 8px;
    border-radius: 4px;
    padding: 1px; }
QScrollBar::handle:vertical {
    background-color: silver;
    max-width: 6px;
    min-height: 12px;
    border-radius: 3px; }
QScrollBar:horizontal {
    background-color: transparent;
    max-height: 8px;
    border-radius: 4px;
    padding: 1px; }
QScrollBar::handle:horizontal {
    background-color: silver;
    max-height: 6px;
    min-width: 12px;
    border-radius: 3px; }
QScrollBar::sub-page:horizontal,
QScrollBar::sub-page:vertical {
    background-color: transparent; }
QScrollBar::add-page:horizontal,
QScrollBar::add-page:vertical {
    background-color: transparent; }
QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    width: 0px; height: 0px; }
QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    width: 0px; height: 0px; }

